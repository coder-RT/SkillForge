{
    "compilerOptions": {
        "target": "ES2022",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "rootDir": ".",
        "outDir": "dist",
        "sourceMap": true,
        "lib": ["ES2022"],
    },
    "ts-node": {"esm": true, "transpileOnly": true},
    "include": ["src/**/*.ts"]
}